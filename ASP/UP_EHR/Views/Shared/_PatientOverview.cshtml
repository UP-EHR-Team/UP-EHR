<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <meta charset="utf-8" />
</head>
<body>
        <div id="top_row" class="row">
    <div class="col-md-1 pad_top">
            <img class="resize" src='@Url.Content("~/Resources/University_of_Portland_shield.png")' alt="Image" width="50px" height="auto"/>
        </div>
        <div  class="col-md-2">
            <div id="p_name" class="row">@Model.lastName, @Model.firstName</div>
            <div id="p_info" class="row">@Model.gender, @Model.age, @Model.birthDate</div>
            <div id="p_info" class="row">Weight: @Model.weight</div>
        </div>
        
        <div  class="col-md-3">
            <div id="p_info" class="row">MRN: @Model.mrn</div>
            <div id="p_info" class="row">Admit Date: @Model.admitDate</div>
            <div id="p_info" class="row">Room: @Model.room</div>
            <div id="p_info" class="row">Unit: @Model.unit</div>
        </div>
        <div class="col-md-3">
            <div id="p_info" class="row">Allergies: @Model.allergies</div>
            <div id="p_info" class="row">Attending: @Model.attending</div>
            <div id="p_info" class="row">BMI: @Model.bmi</div>
            <div id="p_info" class="row">Isolation: @Model.isolation</div>
        </div>
        <div  class="col-md-3">
            <div id="p_info" class="row">Infection: @Model.infection</div>
            <div id="p_info" class="row">Code Status: @Model.codeStatus</div>
            <div id="p_info" class="row">Healthcare Directives: @Model.room</div>
            <div id="p_info" class="row">Language: @Model.language</div>
        </div>
   </div>
    
  
</body>
</html>
