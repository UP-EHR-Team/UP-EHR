@model AssignPatientModel

@{
    ViewBag.Title = "Assign Patient";
}

<!--<img class="resize" src='@Url.Content("~/Resources/University_of_Portland_shield.png")' alt="Image" width="100px" height="auto"/> -->
<div id="buffer" class="row">
    <img class="resize" src='@Url.Content("~/Resources/University_of_Portland_shield.png")' alt="Image" width="75px" height="auto"/>
</div>
<div class="row">
    <div class="col-md-2">
        
    </div>
    <div class="col-md-8">
        <h2 class="title">UP Electronic Health Record</h2>
    </div>
    <div class="col-md-2"></div>
</div>



<div class="col-md-3"></div>
<div class="list-group col-md-6">
  <a href="#" class="list-group-item active">
    Assign Patient
  </a>
    @for(var i = 0; i < @Model.Patients.Count; i++) 
    {
        <a href='@Url.Action("Summary")' class="list-group-item list-group-item-action"> @Model.Patients.ElementAt(i).lastName , @Model.Patients.ElementAt(i).firstName </a>
    }

  <a href='@Url.Action("CreatePatient")' class="list-group-item list-group-item-action">Create New Patient</a>
</div>
<div class="col-md-3"></div>
